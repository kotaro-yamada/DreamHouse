<div class="container">

  <div class="row">
      <h2 class="red-border px-3">新規会員登録</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :お名前, class: "brown-border px-3" %>
                <%= f.text_field :last_name_kanji, placeholder:"姓 例）山田", class: "form-control offset-1 col-5" %>
                <%= f.text_field :first_name_kanji, placeholder:"名 例）太郎", class: "form-control offset-1 col-5" %>
                <%= f.text_field :last_name_kana, placeholder:"セイ 例）ヤマダ", class: "form-control offset-1 col-5" %>
                <%= f.text_field :first_name_kana, placeholder:"メイ 例）タロウ", class: "form-control offset-1 col-5" %>
            </div>

            <div class="form-group">
            　　<%= f.label :postcode, '郵便番号' %>
            　　<%= f.text_field :postcode, autocomplete: 'postcode', class: 'form-control' %>
            </div>

　　　　　　　<div class="form-group">
                    <%= f.label :prefecture_name, '都道府県' %>
                    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' }, class: 'form-control' %>
            </div>

            <div class="form-group">
                    <%= f.label :address_city, '市区町村' %>
                    <%= f.text_field :address_city, autocomplete: 'address_city', class: 'form-control' %>
            </div>

            <div class="form-group">
                    <%= f.label :address_street, '番地' %>
                    <%= f.text_field :address_street, autocomplete: 'address_street', class: 'form-control' %>
            </div>

            <div class="form-group">
                    <%= f.label :address_building, '建物' %>
                    <%= f.text_field :address_building, autocomplete: 'address_building', class: 'form-control' %>
            </div>


            <div class="form-group">
              <%= f.label :電話番号, class: "brown-border px-3" %>
              <%= f.text_field :phone_number, placeholder:"例）08032436501", class: "form-control offset-1 col-11" %>
            </div>

            <div class="form-group">
              <%= f.label :メールアドレス, class: "brown-border px-3" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"例）example@mail", class: "form-control offset-1 col-11" %>
            </div>

            <div class="form-group">
              <%= f.label :パスワード, class: "brown-border px-3" %>
              <%= f.password_field :password, placeholder:"最低６文字必要です。", autocomplete: "new-password", class: "form-control offset-1 col-11" %>
            </div>

            <div class="form-group">
              <%= f.label :パスワード確認, class: "brown-border px-3" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control offset-1 col-11" %>
            </div>

            <div class="row">
              <%= f.submit "会員登録", class: "btn btn-lg btn-primary mx-auto" %>
            </div>
          <% end %>

    <div class="row">
      <div class="offset-9">
        <%= link_to "会員の方はこちらからログイン", new_buyer_session_path(resource_name), class: "btn btn-sm btn-outline-danger" %>
      </div>
    </div>
  </div>
</div>


</div>
</div>