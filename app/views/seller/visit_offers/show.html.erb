	<%= @house.floor_plan %></div>
	<div>郵便番号
	〒<%= @house.postcode %></div>
	<div>住所
	<%= @house.address %></div>
	<div>土地面積
	<%= @house.land_area %>㎡</div>
	<div>建物面積
	<%= @house.building_area %>㎡</div>
