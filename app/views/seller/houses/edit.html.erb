<div class="body-height">
<div class="container">
	<h1>物件情報更新</h1>
	<div class="row">
		<%= attachment_image_tag @house, :image, format: 'jpg' ,size: "100x100", fallback: "no_image.jpg" %>
		<%= form_for @house, :url => {controller: :houses, action: :update} do |f| %>
		<div class="form-group">
			<%= f.label "建物名" %><%= f.text_field :name, class: "form-control" %>
			<%= f.label "郵便番号" %><%= f.text_area :zip_code, class: "form-control" %>
			<%= f.label "住所" %><%= f.text_area :address, class: "form-control" %>
			<%= f.label "土地面積" %><%= f.number_field :land_area, class: "form-horizontal" %>円
			<%= f.label "建物面積" %><%= f.number_field :building_area, class: "form-horizontal" %>円
			<%= f.label "建物種別" %><%= f.select :category, [["戸建て", "戸建て"], ["マンション", "マンション"]], { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
			<%= f.label "間取り" %><%= f.select :floor_plan, [["1LDK","1LDK"], ["2LDK","2LDK"],["3LDK","3LDK"]], include_blank: "--選択してください--" %>
			<%= f.select :sales_status, [["成約済み","成約済み"], ["販売停止中","販売停止中"],["販売中","販売中"]], include_blank: "--選択してください--" %>
			<%= f.submit '変更を保存', class: "btn btn-primary pull-right" %>
		<% end %>
		</div>
	</div>

	<div>
		<h1>>写真を追加する</h1>
		<%= form_for @photo, :url => {controller:  :photos, action: :create} do |f| %>
        <%= f.attachment_field :image %>
        <%= f.submit '新規登録', class: "btn btn-primary" %>
        <% end %>
	</div>
</div>
</div>
