<div class="body-height">
<div class="container">
	<h1>物件情報更新</h1>
	<div class="row">
		<%= attachment_image_tag @house, :photo, format: 'jpg' ,size: "100x100", fallback: "no_image.jpg" %>
		<%= form_for @house, :url => {controller: :houses, action: :update} do |f| %>
		<div class="form-group">
			<%= f.label "建物名" %><%= f.text_field :name, class: "form-control" %>
			<%= f.label "郵便番号" %><%= f.text_area :zip_code, class: "form-control" %>
			<%= f.label "住所" %><%=　f.text_area :address, class: "form-control" %>
			<%= f.label "土地面積" %><%= f.number_field :land_area, class: "form-horizontal" %>円
			<%= f.label "建物面積" %><%= f.number_field :building_area, class: "form-horizontal" %>円
			<%= f.label "建物種別" %><%= f.collection_select :genre_id, Genre.all, :id, :category, class: "form-control" %>円
			<%= f.label "販売価格" %><%= f.number_field :non_taxed_price, class: "form-horizontal" %>円
			<%= f.select :floor_plan, [["1LDK","1LDK"], ["2LDK","2LDK"],["3LDK","3LDK"]], include_blank: "--選択してください--" %>
			<%= f.select :sales_status, [["成約済み","closed"], ["販売停止中","stopped"],["販売中","sales"]], include_blank: "--選択してください--" %>
			<%= f.submit '変更を保存', class: "btn btn-primary pull-right" %>
		<% end %>
		</div>
	</div>
</div>
</div>
